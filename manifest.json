{
  "manifest_version": 2,

  "name": "HBO Meter",
  "description": "TomatoMeter Extension for HBO",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Rank Movies"
  },

  "content_scripts": [
    {
      "matches": ["*://*.hbonow.com/*"],
      "js": ["jquery.js", "content_script.js"],
      "run_at": "document_end" 
    }
  ],


  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://www.rottentomatoes.com/",
    "*://*.hbonow.com/*"
  ]
}
